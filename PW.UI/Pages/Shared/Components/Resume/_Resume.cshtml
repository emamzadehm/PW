@model IEnumerable<PW.ApplicationContracts.ViewModels.ResumeViewModel>
<section class="section section-resume" id="resume">
    <div class="container">

        <div class="section-head">
            <span>رزومه من</span>
            <h2>تجربیات من</h2>
        </div>

        <div class="section-inner">
            <div class="section-resume-wrap">

                <div class="section-experience mb-5">
                    <div class="row">
                        <div class="col-lg-3">
                            <h5 class="section-subHead mb-4 ">بیوگرافی</h5>
                        </div>
                        <div class="col-lg-9">
                            <div class="ExperienceList pb-3">

                                @foreach (var res in Model)
                                {
                                    if (!string.IsNullOrWhiteSpace(res.Id.ToString()))
                                    {
                                        <div class="resume-list b-box p-4 ">
                                            <div class="row align-items-center">
                                                @if (!(string.IsNullOrWhiteSpace(res.FromYear)) && !(string.IsNullOrWhiteSpace(res.ToYear)))
                                                {
                                                    <div class="col-md-4 text-md-left"><h6 class="badge badge-primary">@res.FromYear - @res.ToYear</h6></div>
                                                }
                                                <div class="col-12 col-md-12 pb-2 pb-md-0">
                                                    <h5 class="mb-3">@res.Title</h5>
                                                    <p>@res.Description</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }


                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

